<div class="inner">
  <div class="tags-container">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th># of courses</th>
          <th># of assets</th>
          <th>Actions</th>
        </tr>
      </thead>
      {{#each tags}}
        <tr data-id="{{this._id}}" class="{{#if this.unused}}unused{{/if}}">
          <td>{{this.title}}</td>
          <td class="centre">{{this.courses.length}}</td>
          <td class="centre">{{this.assets.length}}</td>
          <td>
            <button class="btn primary rename">Rename</button>
            <button class="btn secondary transfer">Transfer</button>
            {{#if this.unused}}<button class="btn alert delete">Delete</button>{{/if}}
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>
